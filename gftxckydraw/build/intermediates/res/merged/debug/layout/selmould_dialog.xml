<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="600dp"
    android:layout_height="300dp"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模型选择"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#FF444444"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_click_drawable"
            android:spinnerMode="dropdown"/>

        <ExpandableListView
            android:id="@id/expandableListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:groupIndicator="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@id/mouldSel"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" />
    </ScrollView>


    <LinearLayout
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="215dp"
            android:fadingEdge="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@id/SelMould"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 
            <Button android:id="@id/insertMouldBtn" android:layout_width="100.0px" android:textSize="16dp" android:layout_height="50.0px" android:text="插入" />
            <Button android:id="@id/SelMouldcancel" android:layout_width="100.0px" android:textSize="16dp" android:layout_height="50.0px" android:layout_marginLeft="20.0px" android:text="返回" />
             -->
            <Button
                android:id="@id/insertMouldBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_click_drawable"
                android:text="插入"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16dp" />

            <Button
                android:id="@id/SelMouldcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_click_drawable"
                android:text="返回"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>