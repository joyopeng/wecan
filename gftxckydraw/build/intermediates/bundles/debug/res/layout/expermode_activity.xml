<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/list_pagetitle"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/__button_normal"
            android:text="@string/main_btn_normal_txt"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/__button_down"
            android:text="@string/main_btn_down_txt"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:background="@drawable/visualdesign07" />

        <LinearLayout
            android:id="@id/CanvesCon"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/black"
            tools:ignore="Orientation" />

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:background="@drawable/visualdesign07" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/list_pagetitle"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@id/straight_line"
            android:layout_width="60.0px"
            android:layout_height="60.0px"
            android:background="@drawable/button_selector2"
            android:src="@drawable/straight_line" />

        <ImageButton
            android:id="@id/oblique_line"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/oblique_line" />

        <ImageButton
            android:id="@id/polygon_line"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/polygon_line" />

        <ImageButton
            android:id="@id/straight_wall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/straight_wall" />

        <ImageButton
            android:id="@id/oblique_wall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/oblique_wall" />

        <ImageButton
            android:id="@id/polygon_wall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/polygon_wall" />

        <ImageButton
            android:id="@id/rect_wall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/rect_wall" />

        <ImageButton
            android:id="@id/text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/text" />

        <ImageButton
            android:id="@id/imp_model"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/impmodel" />

        <ImageButton
            android:id="@id/door"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/door" />

        <ImageButton
            android:id="@id/window"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/window" />

        <ImageButton
            android:id="@id/restore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/restore" />

        <ImageButton
            android:id="@id/revocation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/revocation" />

        <ImageButton
            android:id="@id/del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/del" />

        <ImageButton
            android:id="@id/Tab"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_selector2"
            android:src="@drawable/zb" />
    </LinearLayout>

</LinearLayout>