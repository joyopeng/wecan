<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/search_title_layout"
        layout="@layout/secondary_title_bar"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/serial_linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serial_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="序号"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:padding="11dp"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/serial_number"
                android:layout_width="200dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:padding="11dp"
                android:textSize="15sp"
                android:textColor="@color/all_text_color"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_view_stroke"
            android:background="@color/all_view_stroke"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/picture_edit_linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/picture_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="照片说明"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:padding="11dp"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/picture_edit"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:text="点击输入"
                    android:textColor="@color/all_text_color"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
