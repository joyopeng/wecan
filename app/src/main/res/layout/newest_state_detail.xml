<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/search_title_layout"
        layout="@layout/secondary_title_bar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/rootView">

            <RelativeLayout
            android:id="@+id/case_districts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="案发区划"
                android:padding="11dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/case_districts_input"
                android:layout_width="200dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:padding="11dp"
                android:textSize="15sp"
                android:textColor="@color/all_text_color"
                android:hint="@string/click_to_input1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

        </RelativeLayout>





            <RelativeLayout
                android:id="@+id/case_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事发地址"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/case_address_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:gravity="end"
                    android:hint="请输入"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>


            <RelativeLayout
                android:id="@+id/case_happen_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案发时间"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/case_happen_time_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/receptionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接警编号"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/receptionNo_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>
            <RelativeLayout
                android:id="@+id/receive_alarm_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警时间"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/receive_alarm_time_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

            <RelativeLayout
                android:id="@+id/report_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警人"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/report_name_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

            <RelativeLayout
            android:id="@+id/report_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警电话"
                android:padding="11dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/report_phone_input"
                android:layout_width="200dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:padding="11dp"
                android:textSize="15sp"
                android:textColor="@color/all_text_color"
                android:hint="@string/click_to_input1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"
                android:visibility="gone"/>



            <RelativeLayout
                android:id="@+id/appoint_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指派方式"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/appoint_way_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/appoint_way_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接警单位"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/appoint_way_unit_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/receive_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接勘人"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/receive_name_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/receive_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接勘时间"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/receive_time_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>





            <RelativeLayout
                android:id="@+id/inquest_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警内容"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/inquest_reason_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

            <RelativeLayout
                android:id="@+id/case_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--报警类型-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="案件类别"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/case_type_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="@color/all_text_color"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

            <RelativeLayout
                android:id="@+id/inquisition_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--报警类型-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勘验类型"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/inquisition_type_input"
                    android:layout_width="200dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="11dp"
                    android:textSize="15sp"
                    android:textColor="#2ea2eb"
                    android:hint="@string/click_to_input1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>