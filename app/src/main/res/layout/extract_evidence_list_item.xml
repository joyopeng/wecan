<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        >

        <TextView
            android:id="@+id/evidence_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="212256633525"
            android:textColor="@color/text_color_selector"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:padding="11dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/evidence_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iphone 7"
            android:layout_toRightOf="@+id/evidence_id"
            android:layout_toLeftOf="@+id/extract_date"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@color/text_color_selector"
            android:padding="11dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/extract_date"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/right_arrow"
            android:padding="11dp"
            android:textSize="12sp"
            android:textColor="@color/text_color_selector"
            android:text="2016-12-12"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/right_arrow"
            android:layout_width="11dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:padding="11dp"
            android:background="@drawable/right_arrow"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_view_stroke"
        android:background="@color/all_view_stroke"/>

</LinearLayout>

