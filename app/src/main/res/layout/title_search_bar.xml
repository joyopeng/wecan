<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_title_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/search_title_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:id="@+id/rootView"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/search_title_back_img"
            android:layout_width="16dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:background="@drawable/left_arrow"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_title_logo"
                android:layout_marginLeft="100dp"/>

            <TextView
                android:id="@+id/title_bar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="现勘快录"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_alarm_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingRight="16dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/title_bar_alarm_img2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/search_title_alarm_none"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="警情"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_title_search_layout"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="54dp">
        <LinearLayout
            android:id="@+id/title_bar_alarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
				android:id="@+id/title_bar_alarm_img"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/search_title_alarm_none"
                />
            <TextView
                android:id="@+id/title_bar_alarm_txt"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="警情"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <EditText
                android:id="@+id/title_bar_search_edit"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@color/white"
                android:hint="请输入查询内容"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="@dimen/common_button_text_size"
                android:layout_weight="1"
                android:layout_gravity="top" />

            <ImageView
                android:id="@+id/title_bar_search_img"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_title_search_button"
                android:adjustViewBounds="true"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_add_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/title_bar_add_img"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/add_case_img"
                />
            <TextView
                android:id="@+id/title_bar_add_txt"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="新增"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>