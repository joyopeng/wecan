<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thinkcool.circletextimageviewtest.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/photo_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignRight="@+id/photo_pager"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edit_icon"
        />

    <LinearLayout

        android:id="@+id/bottom_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <RelativeLayout

            android:id="@+id/general_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/milky_white"
            >
            <TextView
                android:id="@+id/general_picture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="归为\n概貌"
                android:padding="10dp"
                android:gravity="center"
                />

            <!--<TextView
                android:id="@+id/general_picture_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_point"
                android:textColor="@color/white"/>-->
            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/general_picture_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                app:citv_text_text="5"
                app:citv_text_size="10sp"
                app:citv_text_padding="35dp"
                android:src="@drawable/yellow_point"
                app:citv_text_color="#ffffff"
                app:citv_fill_color="#50555D"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/key_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/milky_white">
            <TextView
                android:id="@+id/key_picture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="归为\n重点"
                android:padding="10dp"
                android:gravity="center"
                />

            <!--<TextView
                android:id="@+id/key_picture_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_point"
                android:textColor="@color/white"/>-->
            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/key_picture_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                app:citv_text_text="2"
                app:citv_text_size="10sp"
                app:citv_text_padding="35dp"
                android:src="@drawable/yellow_point"
                app:citv_text_color="#ffffff"
                app:citv_fill_color="#50555D"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/detail_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/milky_white">
            <TextView
                android:id="@+id/detail_picture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="归为\n细目"
                android:padding="10dp"
                android:gravity="center"/>
            <!--<TextView
                android:id="@+id/detail_picture_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_point"
                android:textColor="@color/white"/>-->
            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/detail_picture_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                app:citv_text_text="4"
                app:citv_text_size="10sp"
                app:citv_text_padding="35dp"
                android:src="@drawable/yellow_point"
                app:citv_text_color="#ffffff"
                app:citv_fill_color="#50555D"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/other_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/milky_white">
            <TextView
                android:id="@+id/other_picture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="归为\n其它"
                android:padding="10dp"
                android:gravity="center"/>
            <!--<TextView
                android:id="@+id/other_picture_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/yellow_point"
                android:textColor="@color/white"/>-->
            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/other_picture_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                app:citv_text_text="5"
                app:citv_text_size="10sp"
                app:citv_text_padding="35dp"
                android:src="@drawable/yellow_point"
                app:citv_text_color="#ffffff"
                app:citv_fill_color="#50555D"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/scene_plan_photo_remove_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:visibility="gone"
        android:background="@drawable/scene_direct_delete" />
</RelativeLayout>
