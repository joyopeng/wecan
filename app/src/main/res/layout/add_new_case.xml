<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/search_title_layout"
        layout="@layout/secondary_title_bar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/receive_case_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="接警编号"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/receive_case_num_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

            <RelativeLayout
                android:id="@+id/case_districts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="发案区划"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/case_districts_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

            <RelativeLayout
                android:id="@+id/case_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="案件类别"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/case_type_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />


            <RelativeLayout
                android:id="@+id/case_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/case_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="发案地点"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/case_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/case_address_label"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:hint="请输入"
                    android:maxLines="2"
                    android:padding="11dp"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

            <RelativeLayout
                android:id="@+id/case_happen_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="案发开始时间"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/case_happen_time_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

            <RelativeLayout
                android:id="@+id/case_happen_time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="案发结束时间"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/case_happen_time_end_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>
            <!--  <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke"/>-->

            <RelativeLayout
                android:id="@+id/receive_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="接警人"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/receive_name_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />


            <RelativeLayout
                android:id="@+id/inquest_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:text="勘验事由"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/inquest_reason_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:textColor="@color/all_text_color"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

            <RelativeLayout
                android:id="@+id/inquisition_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--报警类型-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:text="勘验类型"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/inquisition_type_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:hint="@string/click_to_input1"
                    android:padding="11dp"
                    android:textColor="#2ea2eb"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_view_stroke"
                android:background="@color/all_view_stroke" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>