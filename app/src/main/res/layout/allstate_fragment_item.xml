<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/colour_LinearLayout"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#FF9853">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF9853"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/investigationPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高新区桂花园高档小区"
            android:padding="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exposureProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盗窃，报案人丢失两台电脑"
            android:paddingLeft="10dp"
            android:textSize="13sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="出警人:"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/sceneRegionalismName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="小陶"
                    android:textColor="#8BABCE"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/caseSolve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="勘查中"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FFC1AA"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/crackedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="5小时前"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
