<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/history_title_layout"
        layout="@layout/secondary_title_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_split_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/case_history_investigation_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="现场"
                android:gravity="center"
                android:textColor="@color/text_common_blue_color" />
            <View
                android:id="@+id/case_history_investigation_tab_img"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/text_common_blue_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/case_history_lowcase_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="案件"
                android:gravity="center"
                android:textColor="@color/text_common_gray_color"/>
            <View
                android:id="@+id/case_history_lowcase_tab_img"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="invisible"
                android:background="@color/text_common_blue_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/case_history_reception_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="接勘"
                android:gravity="center"
                android:textColor="@color/text_common_gray_color"/>
            <View
                android:id="@+id/case_history_reception_tab_img"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="invisible"
                android:background="@color/text_common_blue_color"/>
            </LinearLayout>
    </LinearLayout>
    <com.gofirst.scenecollection.evidence.view.customview.NoScrollViewPager
        android:id="@+id/case_history_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation">

    </com.gofirst.scenecollection.evidence.view.customview.NoScrollViewPager>
</LinearLayout>