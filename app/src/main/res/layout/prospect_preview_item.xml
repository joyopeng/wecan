<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/text_background"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#4C82B5"
                android:padding="10dp"
                android:text="在某某辖区内发生一起入室杀人案请速派勘察人员到场...."
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/edit_camera_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#42BBB1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="79dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/edit_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/white" />

                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="79dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/camera_white" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="照片盲拍"
                android:textSize="15sp" />

            <com.gofirst.scenecollection.evidence.view.customview.Audio
                android:id="@+id/play_or_record"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/record" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>