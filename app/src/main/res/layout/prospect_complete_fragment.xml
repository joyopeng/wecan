<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/colour_LinearLayout"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#3D7BB4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#3D7BB4"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="[简勘]"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/investigationPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高新区桂花园高档小区"
                android:padding="10dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crackedDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2015年6月12日"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="出警人:"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/sceneRegionalismName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="小陶"
                android:textColor="#8BABCE"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/caseSolve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="未出警"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FFC1AA"
                android:textSize="13sp"/>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>

