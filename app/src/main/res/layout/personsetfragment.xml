<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#FF2EA2EB"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/person_center_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/person_center_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名: "
                android:textColor="@color/text_common_white_color" />

            <TextView
                android:id="@+id/person_center_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号: "
                android:textColor="@color/text_common_white_color" />

            <TextView
                android:id="@+id/person_center_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位: "
                android:textColor="@color/text_common_white_color" />

            <LinearLayout
                android:id="@+id/person_center_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签名: "
                    android:textColor="@color/text_common_white_color" />

                <ImageView
                    android:id="@+id/person_center_sign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_center_update_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="13dp"
            android:text="修改密码"
            android:textColor="@color/text_common_gray_color"
            android:textSize="@dimen/common_button_text_size" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/cscense_list_item_go" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/scene_list_divider_height"
        android:background="@color/scene_list_divider_color" />

    <LinearLayout
        android:id="@+id/person_center_about_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="13dp"
            android:text="关于"
            android:textColor="@color/text_common_gray_color"
            android:textSize="@dimen/common_button_text_size" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/cscense_list_item_go" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/scene_list_divider_height"
        android:background="@color/scene_list_divider_color" />

    <LinearLayout
        android:id="@+id/person_center_sign_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="13dp"
            android:text="签名"
            android:textColor="@color/text_common_gray_color"
            android:textSize="@dimen/common_button_text_size" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/cscense_list_item_go" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/scene_list_divider_height"
        android:background="@color/scene_list_divider_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/person_center_exit_btn"
        style="@style/common_button_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="退出登录" />
</LinearLayout>
