<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tip_dialog_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s_btn_white_fillet"
    android:gravity="center"
    android:minHeight="80dp"
    android:minWidth="180dp"
    android:padding="10dp" >
    <TextView
        android:id="@+id/tip_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#999999"
        android:text=""
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tip_dialog_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/tip_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/tip_dialog_close_btn_text"
            android:textSize="15sp"
            android:background="#fffafafa"/>
        <Button
            android:id="@+id/tip_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/tip_dialog_confirm_btn_text"
            android:textSize="15sp"
            android:textColor="#999999"
            android:visibility="gone"
            android:background="#fffafafa"/>
    </LinearLayout>

</LinearLayout>